---
import Layout from "../../layout/layout.astro";
import StaffTable from "../../components/StaffTable"
---
<Layout>
    <div class="w-full h-full flex flex-col items-center pt-12 mb-12">
        <div class="w-2/3 flex flex-col items-center">
            <h1 class="text-6xl font-medium">Staff Team</h1>
            <hr  class="border-1 border-vatsca2/50 w-1/3 m-4"/>
            <StaffTable />
        </div>
        <div class="w-2/3 pt-4">             
            <p class="font-semibold">Legend</p>
            <p>AVL = Available and can be reached on a daily basis</p>
            <p>OOO = Out of Office (longer vacation, 3-6 weeks)</p>
            <p>DEP = Away for more than 2 months</p>
            <p>VAC = Position vacant</p>>
        </div>
    </div>
</Layout>